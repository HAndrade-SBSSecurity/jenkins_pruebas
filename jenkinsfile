pipeline {
    agent {
        label 'WindowsAgent'
    }
    triggers {
        cron('*/20 * * * *') // Se ejecuta cada 20 minutos
    }
    stages {
        stage('Son las 15 hrs "do"') {
            when {
                expression {
                    return new Date().format("HH").toInteger() == 15 && new Date().format("mm").toInteger() < 20
                }
            }
            steps {
                script {
                    bat 'python do.py'
                }
            }
        }
        stage('Son las 14 hrs "to do"') {
            when {
                expression {
                    return new Date().format("HH").toInteger() == 14 && new Date().format("mm").toInteger() < 20
                }
            }
            steps {
                script {
                    bat 'python to_do.py'
                }
            }
        }
    }
}