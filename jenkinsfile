pipeline {
    agent {
        label 'WindowsAgent'
    }
    stages {
        stage('Clone Repo "do"') {
            when {
                expression {
                    return new Date().format("HH").toInteger() >= 15 // 15 representa las 3pm en formato de 24 horas
                }
            }
            steps {
                script {
                    bat 'python do.py'
                }
            }
        }
        stage('Clone Repo "to do"') {
            when {
                expression {
                    return new Date().format("HH").toInteger() < 15
                }
            }
            steps {
                script {
                    bat 'python to_do.py'
                }
            }
        }
    }
}