pipeline {
    agent any
    environment {
        COUNTER = 0 // Inicializa el contador en cero
    }
    stages {
        stage('Increment Counter') {
            steps {
                script {
                    COUNTER++
                    echo "El contador es: ${COUNTER}"
                }
            }
        }
        stage('Utilizar el Contador') {
            steps {
                script {
                    echo "Utilizando el contador en otra parte del pipeline: ${COUNTER}"
                }
            }
        }
    }
}