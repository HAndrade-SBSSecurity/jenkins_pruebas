pipeline {
    agent {
        label 'WindowsAgent'
    }
    triggers {
        cron('* * * * *')
    }
    stages {
        stage('Son las 12 hrs "do"') {
            when {
                expression {
                    return new Date().format("HH").toInteger() == 10 // 9 representa las 9am en formato de 24 horas
                }
            }
            steps {
                script {
                    bat 'python do.py'
                }
            }
        }
        stage('Son las 11 hrs "to do"') {
            when {
                expression {
                    return new Date().format("HH").toInteger() == 11 // 15 representa las 3pm en formato de 24 horas
                }
            }
            steps {
                script {
                    bat 'python to_do.py'
                }
            }
        }
    }
}