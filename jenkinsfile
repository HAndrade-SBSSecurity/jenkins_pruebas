pipeline {
    agent {
        label 'WindowsAgent'
    }
    triggers {
        cron('*/2 * * * *') // Se ejecuta cada 20 minutos
    }
    environment {
        EXECUTED_THIS_HOUR = false
    }
    stages {
        stage('Son las 15 hrs "do"') {
            when {
                expression {
                    return new Date().format("HH").toInteger() >= 15 && !env.EXECUTED_THIS_HOUR
                }
            }
            steps {
                script {
                    bat 'python do.py'
                    env.EXECUTED_THIS_HOUR = true
                }
            }
        }
        stage('Son las 14 hrs "to do"') {
            when {
                expression {
                    return new Date().format("HH").toInteger() <= 14 
                }
            }
            steps {
                script {
                    bat 'python to_do.py'
                    env.EXECUTED_THIS_HOUR = true
                }
            }
        }
    }
}